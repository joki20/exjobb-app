{
    "compilerOptions": {
      "outDir": "./dist",
      "rootDir": ".",
      "sourceMap": true, // maps JSX code back to JS code in order to find errors
      "noImplicitAny": true,
      "module": "esnext",
      "target": "es2020",
      "jsx": "react-jsx", // how JSX is transformed into JS
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "moduleResolution": "Node"
    }
}